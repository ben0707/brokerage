@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_Account.cshtml";
}

<div class="space-y-6">

    <!-- ========== TOP ROW: GREETING + QUICK ACTIONS ========== -->
    <section class="flex flex-col gap-3 sm:flex-row sm:items-center sm:justify-between">
        <div>
            <p class="text-xs font-semibold uppercase tracking-[0.18em] text-slate-500 dark:text-slate-500">
                Overview
            </p>
            <h1 class="mt-1 text-xl font-semibold text-slate-900 dark:text-slate-50">
                Welcome back, Benson
            </h1>
            <p class="mt-1 text-xs text-slate-500 dark:text-slate-400">
                Monitor your balance, open positions, and recent funding activity at a glance.
            </p>
        </div>

        <div class="flex flex-wrap items-center gap-2 text-xs">
            <button type="button" class="inline-flex items-center gap-1.5 rounded-lg bg-slate-900 px-3.5 py-2 font-medium text-white
                           hover:bg-black dark:bg-slate-50 dark:text-slate-900 dark:hover:bg-white">
                <span>Fund wallet</span>
                <span class="text-[11px]">↗</span>
            </button>
            <button type="button"
                class="inline-flex items-center gap-1.5 rounded-lg border border-slate-200 bg-white px-3 py-2 font-medium text-slate-800
                           hover:bg-slate-50 dark:border-slate-700 dark:bg-slate-900 dark:text-slate-100 dark:hover:bg-slate-800">
                Withdraw
            </button>
            <button type="button"
                class="inline-flex items-center gap-1.5 rounded-lg border border-slate-200 bg-white px-3 py-2 font-medium text-slate-800
                           hover:bg-slate-50 dark:border-slate-700 dark:bg-slate-900 dark:text-slate-100 dark:hover:bg-slate-800">
                New trade
            </button>
        </div>
    </section>

    <!-- ========== KPI STRIP ========== -->
    <section class="grid gap-3 sm:grid-cols-2 lg:grid-cols-4">
        <!-- Balance -->
        <article class="rounded-2xl border border-slate-200 bg-white/90 px-4 py-3 text-sm shadow-sm
                   dark:border-slate-800 dark:bg-slate-950">
            <p class="text-[11px] font-medium text-slate-500 dark:text-slate-400">
                Account balance
            </p>
            <p class="mt-1 text-lg font-semibold tracking-tight text-slate-900 dark:text-slate-50">
                $12,450.32
            </p>
            <p class="mt-1 text-[11px] text-emerald-500">
                +$320.18 today
            </p>
        </article>

        <!-- Equity -->
        <article class="rounded-2xl border border-slate-200 bg-white/90 px-4 py-3 text-sm shadow-sm
                   dark:border-slate-800 dark:bg-slate-950">
            <p class="text-[11px] font-medium text-slate-500 dark:text-slate-400">
                Equity
            </p>
            <p class="mt-1 text-lg font-semibold tracking-tight text-slate-900 dark:text-slate-50">
                $13,120.44
            </p>
            <p class="mt-1 text-[11px] text-slate-500 dark:text-slate-400">
                Includes floating P&amp;L
            </p>
        </article>

        <!-- P&L Today -->
        <article class="rounded-2xl border border-slate-200 bg-white/90 px-4 py-3 text-sm shadow-sm
                   dark:border-slate-800 dark:bg-slate-950">
            <p class="text-[11px] font-medium text-slate-500 dark:text-slate-400">
                P&amp;L (today)
            </p>
            <p class="mt-1 text-lg font-semibold tracking-tight text-emerald-500">
                +$210.07
            </p>
            <p class="mt-1 text-[11px] text-slate-500 dark:text-slate-400">
                4 closed trades
            </p>
        </article>

        <!-- Open positions -->
        <article class="rounded-2xl border border-slate-200 bg-white/90 px-4 py-3 text-sm shadow-sm
                   dark:border-slate-800 dark:bg-slate-950">
            <p class="text-[11px] font-medium text-slate-500 dark:text-slate-400">
                Open positions
            </p>
            <p class="mt-1 text-lg font-semibold tracking-tight text-slate-900 dark:text-slate-50">
                3
            </p>
            <p class="mt-1 text-[11px] text-emerald-500">
                +$84.30 floating
            </p>
        </article>
    </section>

    <!-- ========== MIDDLE ROW: WALLET + TRANSACTIONS ========== -->
    <section class="grid gap-4 lg:grid-cols-[minmax(0,0.9fr)_minmax(0,1.1fr)]">
        <!-- Wallet overview -->
        <article class="flex flex-col rounded-2xl border border-slate-200 bg-white/95 px-4 py-4 text-sm shadow-sm
                   dark:border-slate-800 dark:bg-slate-950">
            <div class="flex items-start justify-between gap-2">
                <div>
                    <p class="text-[11px] font-semibold uppercase tracking-[0.18em] text-slate-500 dark:text-slate-500">
                        Wallet overview
                    </p>
                    <p class="mt-1 text-xs text-slate-500 dark:text-slate-400">
                        Primary trading wallet · USD
                    </p>
                </div>
                <span
                    class="inline-flex items-center rounded-full bg-emerald-500/10 px-2 py-0.5 text-[10px] font-medium text-emerald-500">
                    Active
                </span>
            </div>

            <!-- Balance line -->
            <div class="mt-4 rounded-xl bg-slate-900 px-4 py-3 text-white dark:bg-slate-50 dark:text-slate-900">
                <div class="flex items-center justify-between text-xs">
                    <span class="text-slate-300 dark:text-slate-500">Available balance</span>
                    <span class="text-[11px] text-slate-400 dark:text-slate-500">USD Wallet</span>
                </div>
                <p class="mt-1 text-2xl font-semibold tracking-tight">
                    $12,450.32
                </p>
                <div class="mt-2 flex items-center justify-between text-[11px] text-slate-300 dark:text-slate-500">
                    <span>In orders · $670.12</span>
                    <span>Bonus · $150.00</span>
                </div>
            </div>

            <!-- Breakdown -->
            <dl class="mt-4 grid grid-cols-3 gap-3 text-[11px] text-slate-600 dark:text-slate-300">
                <div>
                    <dt class="text-slate-500 dark:text-slate-400">Deposited</dt>
                    <dd class="mt-1 font-medium text-slate-900 dark:text-slate-50">$9,000.00</dd>
                </div>
                <div>
                    <dt class="text-slate-500 dark:text-slate-400">Total P&amp;L</dt>
                    <dd class="mt-1 font-medium text-emerald-500">+$3,450.32</dd>
                </div>
                <div>
                    <dt class="text-slate-500 dark:text-slate-400">Withdrawn</dt>
                    <dd class="mt-1 font-medium text-slate-900 dark:text-slate-50">$1,200.00</dd>
                </div>
            </dl>

            <!-- Actions -->
            <div class="mt-4 flex flex-wrap items-center gap-2 text-xs">
                <button type="button" class="inline-flex flex-1 items-center justify-center gap-1.5 rounded-lg bg-slate-900 px-3 py-2 font-medium text-white
                               hover:bg-black dark:bg-slate-50 dark:text-slate-900 dark:hover:bg-white">
                    Fund wallet
                </button>
                <button type="button"
                    class="inline-flex flex-1 items-center justify-center gap-1.5 rounded-lg border border-slate-200 bg-white px-3 py-2 font-medium text-slate-800
                               hover:bg-slate-50 dark:border-slate-700 dark:bg-slate-900 dark:text-slate-100 dark:hover:bg-slate-800">
                    Withdraw
                </button>
            </div>
        </article>

        <!-- Recent transactions -->
        <article class="flex flex-col rounded-2xl border border-slate-200 bg-white/95 px-4 py-4 text-sm shadow-sm
                   dark:border-slate-800 dark:bg-slate-950">
            <div class="mb-2 flex items-center justify-between">
                <div>
                    <p class="text-[11px] font-semibold uppercase tracking-[0.18em] text-slate-500 dark:text-slate-500">
                        Recent transactions
                    </p>
                    <p class="mt-1 text-[11px] text-slate-500 dark:text-slate-400">
                        Funding, withdrawals, and internal transfers.
                    </p>
                </div>
                <button type="button" class="text-[11px] font-medium text-sky-600 hover:underline dark:text-sky-400">
                    View all
                </button>
            </div>

            <div class="mt-1 divide-y divide-slate-100 text-xs dark:divide-slate-800">
                <!-- Row 1 -->
                <div class="flex items-center justify-between py-2">
                    <div class="flex items-center gap-2">
                        <span
                            class="inline-flex h-7 w-7 items-center justify-center rounded-full bg-emerald-500/10 text-[11px] font-semibold text-emerald-500">
                            +
                        </span>
                        <div>
                            <p class="font-medium text-slate-800 dark:text-slate-100">
                                Deposit · Card
                            </p>
                            <p class="text-[11px] text-slate-500 dark:text-slate-400">
                                **** 4821 · 10:24 AM
                            </p>
                        </div>
                    </div>
                    <div class="text-right">
                        <p class="font-semibold text-emerald-500">+ $500.00</p>
                        <p class="text-[11px] text-slate-500 dark:text-slate-400">Completed</p>
                    </div>
                </div>

                <!-- Row 2 -->
                <div class="flex items-center justify-between py-2">
                    <div class="flex items-center gap-2">
                        <span
                            class="inline-flex h-7 w-7 items-center justify-center rounded-full bg-rose-500/10 text-[11px] font-semibold text-rose-500">
                            −
                        </span>
                        <div>
                            <p class="font-medium text-slate-800 dark:text-slate-100">
                                Withdrawal · USDT
                            </p>
                            <p class="text-[11px] text-slate-500 dark:text-slate-400">
                                TRC20 · Yesterday
                            </p>
                        </div>
                    </div>
                    <div class="text-right">
                        <p class="font-semibold text-rose-500">− $200.00</p>
                        <p class="text-[11px] text-slate-500 dark:text-slate-400">Completed</p>
                    </div>
                </div>

                <!-- Row 3 -->
                <div class="flex items-center justify-between py-2">
                    <div class="flex items-center gap-2">
                        <span
                            class="inline-flex h-7 w-7 items-center justify-center rounded-full bg-sky-500/10 text-[11px] font-semibold text-sky-500">
                            ⇄
                        </span>
                        <div>
                            <p class="font-medium text-slate-800 dark:text-slate-100">
                                Internal transfer
                            </p>
                            <p class="text-[11px] text-slate-500 dark:text-slate-400">
                                Wallet → Trading account
                            </p>
                        </div>
                    </div>
                    <div class="text-right">
                        <p class="font-semibold text-slate-900 dark:text-slate-50">$750.00</p>
                        <p class="text-[11px] text-slate-500 dark:text-slate-400">Pending</p>
                    </div>
                </div>
            </div>
        </article>
    </section>

    <!-- ========== BOTTOM ROW: CARD SUMMARY ========== -->
    <section class="grid gap-4 lg:grid-cols-[minmax(0,1.1fr)_minmax(0,0.9fr)]">
        <!-- Card management -->
        <article class="flex flex-col rounded-2xl border border-slate-200 bg-white/95 px-4 py-4 text-sm shadow-sm
                   dark:border-slate-800 dark:bg-slate-950">
            <div class="mb-3 flex items-center justify-between gap-2">
                <div>
                    <p class="text-[11px] font-semibold uppercase tracking-[0.18em] text-slate-500 dark:text-slate-500">
                        Trading card
                    </p>
                    <p class="mt-1 text-[11px] text-slate-500 dark:text-slate-400">
                        Use your card for instant deposits into your trading wallet.
                    </p>
                </div>
                <span class="inline-flex items-center rounded-full bg-slate-100 px-2 py-0.5 text-[10px] font-medium text-slate-700
                           dark:bg-slate-800 dark:text-slate-200">
                    Virtual · USD
                </span>
            </div>

            <!-- Card visual -->
            <div class="relative mt-1 rounded-2xl bg-gradient-to-br from-slate-900 via-slate-800 to-black p-4 text-xs text-white
                       shadow-md dark:from-slate-50 dark:via-slate-100 dark:to-slate-200 dark:text-slate-900">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-[10px] uppercase tracking-[0.18em] text-slate-300 dark:text-slate-500">
                            Trading card
                        </p>
                        <p class="mt-1 text-sm font-semibold">
                            Benson Shedrach
                        </p>
                    </div>
                    <div class="text-right text-[10px] text-slate-300 dark:text-slate-500">
                        <p>Valid thru</p>
                        <p class="font-semibold">08/28</p>
                    </div>
                </div>
                <p class="mt-4 text-lg tracking-[0.18em]">
                    4562 &bull; 89** &bull; **** &bull; 1023
                </p>
                <div class="mt-3 flex items-center justify-between text-[10px] text-slate-300 dark:text-slate-500">
                    <span>CVV · 3**</span>
                    <span>Status · Active</span>
                </div>
            </div>

            <!-- Card actions -->
            <div class="mt-4 flex flex-wrap items-center gap-2 text-xs">
                <button type="button" class="inline-flex flex-1 items-center justify-center gap-1.5 rounded-lg bg-slate-900 px-3 py-2 font-medium text-white
                               hover:bg-black dark:bg-slate-50 dark:text-slate-900 dark:hover:bg-white">
                    View card details
                </button>
                <button type="button"
                    class="inline-flex flex-1 items-center justify-center gap-1.5 rounded-lg border border-slate-200 bg-white px-3 py-2 font-medium text-slate-800
                               hover:bg-slate-50 dark:border-slate-700 dark:bg-slate-900 dark:text-slate-100 dark:hover:bg-slate-800">
                    Freeze card
                </button>
            </div>
        </article>

        <!-- Small stats / limits -->
        <article class="flex flex-col rounded-2xl border border-slate-200 bg-white/95 px-4 py-4 text-sm shadow-sm
                   dark:border-slate-800 dark:bg-slate-950">
            <p class="text-[11px] font-semibold uppercase tracking-[0.18em] text-slate-500 dark:text-slate-500">
                Limits & risk
            </p>

            <dl class="mt-3 space-y-3 text-xs text-slate-600 dark:text-slate-300">
                <div class="flex items-center justify-between">
                    <div>
                        <dt class="text-slate-500 dark:text-slate-400">Daily deposit limit</dt>
                        <dd class="mt-0.5 font-medium text-slate-900 dark:text-slate-50">$5,000.00</dd>
                    </div>
                    <span class="text-[10px] text-emerald-500">40% used</span>
                </div>

                <div class="flex items-center justify-between">
                    <div>
                        <dt class="text-slate-500 dark:text-slate-400">Daily withdrawal limit</dt>
                        <dd class="mt-0.5 font-medium text-slate-900 dark:text-slate-50">$3,000.00</dd>
                    </div>
                    <span class="text-[10px] text-emerald-500">18% used</span>
                </div>

                <div class="flex items-center justify-between">
                    <div>
                        <dt class="text-slate-500 dark:text-slate-400">Open risk (margin)</dt>
                        <dd class="mt-0.5 font-medium text-slate-900 dark:text-slate-50">$1,250.00</dd>
                    </div>
                    <span class="text-[10px] text-slate-500 dark:text-slate-400">Leverage 1:500</span>
                </div>
            </dl>

            <button type="button"
                class="mt-4 inline-flex items-center justify-center rounded-lg border border-slate-200 bg-white px-3 py-2 text-xs font-medium text-slate-800
                           hover:bg-slate-50 dark:border-slate-700 dark:bg-slate-900 dark:text-slate-100 dark:hover:bg-slate-800">
                Adjust limits
            </button>
        </article>
    </section>
</div>