@{
    ViewData["Title"] = "Support hub";
    Layout = "~/Views/Shared/_Account.cshtml";
}

<div class="min-h-[calc(100vh-180px)]">
    <h1 class="text-[44px] font-semibold leading-tight tracking-[-0.02em] text-slate-900 dark:text-slate-50">
        Contact us
    </h1>

    <div class="mt-6 grid grid-cols-1 gap-6 lg:grid-cols-3">

        <!-- Card 1 -->
        <div class="group flex h-full flex-col overflow-hidden rounded-2xl border border-slate-200 bg-white
                    shadow-[0_8px_30px_rgba(15,23,42,0.06)]
                    dark:border-slate-800 dark:bg-slate-950 dark:shadow-[0_8px_30px_rgba(0,0,0,0.55)]">
            <div class="relative h-[210px] w-full overflow-hidden bg-slate-100 dark:bg-slate-900">
                <img src="~/assets/support/contact-1.webp" class="h-full w-full object-cover opacity-95 transition duration-300 group-hover:scale-[1.02]
                            dark:opacity-90" alt="Need assistance" />
                <!-- subtle overlay for dark readability -->
                <div
                    class="pointer-events-none absolute inset-0 bg-gradient-to-t from-black/10 to-transparent dark:from-black/35">
                </div>
            </div>

            <div class="flex flex-1 flex-col p-6">
                <h3 class="text-2xl font-semibold tracking-[-0.01em] text-slate-900 dark:text-slate-50">
                    Need assistance?
                </h3>
                <p class="mt-2 text-[16px] leading-6 text-slate-700 dark:text-slate-300">
                    Complete the form and we will get back to you shortly.
                </p>

                <div class="mt-6">
                    <a href="/Support/Create" class="inline-flex items-center gap-3 rounded-xl bg-brandYellow px-6 py-3 text-[16px] font-semibold text-black
                              shadow-[0_10px_25px_rgba(249,217,0,0.25)]
                              hover:brightness-95 active:brightness-90
                              focus:outline-none focus:ring-4 focus:ring-yellow-300/50
                              dark:focus:ring-yellow-500/25">
                        <span class="grid h-6 w-6 place-items-center rounded-md bg-black/10">
                            <svg class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                                stroke-width="2.5">
                                <path d="M12 5v14M5 12h14" />
                            </svg>
                        </span>
                        Open a ticket
                    </a>
                </div>
            </div>
        </div>

        <!-- Card 2 -->
        <div class="group flex h-full flex-col overflow-hidden rounded-2xl border border-slate-200 bg-white
                    shadow-[0_8px_30px_rgba(15,23,42,0.06)]
                    dark:border-slate-800 dark:bg-slate-950 dark:shadow-[0_8px_30px_rgba(0,0,0,0.55)]">
            <div class="relative h-[210px] w-full overflow-hidden bg-slate-100 dark:bg-slate-900">
                <img src="~/assets/support/contact-2.webp" class="h-full w-full object-cover opacity-95 transition duration-300 group-hover:scale-[1.02]
                            dark:opacity-90" alt="Live chat" />
                <div
                    class="pointer-events-none absolute inset-0 bg-gradient-to-t from-black/10 to-transparent dark:from-black/35">
                </div>
            </div>

            <div class="flex flex-1 flex-col p-6">
                <h3 class="text-2xl font-semibold tracking-[-0.01em] text-slate-900 dark:text-slate-50">
                    Live chat
                </h3>
                <p class="mt-2 text-[16px] leading-6 text-slate-700 dark:text-slate-300">
                    Can't find the answers you're looking for? Chat with our Intelligent Assistant.
                </p>

                <div class="mt-6">
                    <button type="button" class="inline-flex items-center gap-3 rounded-xl border border-slate-200 bg-slate-100 px-6 py-3
                                   text-[16px] font-semibold text-slate-900
                                   hover:bg-slate-200 active:bg-slate-300
                                   focus:outline-none focus:ring-4 focus:ring-slate-300/50
                                   dark:border-slate-700 dark:bg-white/10 dark:text-slate-50
                                   dark:hover:bg-white/15 dark:active:bg-white/20 dark:focus:ring-white/10">
                        <span class="grid h-6 w-6 place-items-center rounded-md bg-white/70 dark:bg-white/10">
                            <svg class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                                stroke-width="2.2">
                                <path d="M21 14a4 4 0 0 1-4 4H8l-5 4V6a4 4 0 0 1 4-4h10a4 4 0 0 1 4 4z" />
                                <path d="M8 9h8M8 13h5" />
                            </svg>
                        </span>
                        Start chat
                    </button>
                </div>
            </div>
        </div>

        <!-- Card 3 -->
        <div class="group flex h-full flex-col overflow-hidden rounded-2xl border border-slate-200 bg-white
                    shadow-[0_8px_30px_rgba(15,23,42,0.06)]
                    dark:border-slate-800 dark:bg-slate-950 dark:shadow-[0_8px_30px_rgba(0,0,0,0.55)]">
            <div class="relative h-[210px] w-full overflow-hidden bg-slate-100 dark:bg-slate-900">
                <img src="~/assets/support/contact-3.webp" class="h-full w-full object-cover opacity-95 transition duration-300 group-hover:scale-[1.02]
                            dark:opacity-90" alt="Still need help" />
                <div
                    class="pointer-events-none absolute inset-0 bg-gradient-to-t from-black/10 to-transparent dark:from-black/35">
                </div>
            </div>

            <div class="flex flex-1 flex-col p-6">
                <h3 class="text-2xl font-semibold tracking-[-0.01em] text-slate-900 dark:text-slate-50">
                    Still need help?
                </h3>
                <p class="mt-2 text-[16px] leading-6 text-slate-700 dark:text-slate-300">
                    To speak with our support team, call us at
                </p>

                <div
                    class="mt-4 inline-flex items-center gap-3 text-[18px] font-medium text-slate-900 dark:text-slate-50">
                    <span class="grid h-10 w-10 place-items-center rounded-full bg-slate-100 text-slate-700
                                 dark:bg-white/10 dark:text-slate-100">
                        <svg class="h-5 w-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.2">
                            <path
                                d="M22 16.92v3a2 2 0 0 1-2.18 2 19.8 19.8 0 0 1-8.63-3.07A19.5 19.5 0 0 1 3.15 10.8 19.8 19.8 0 0 1 .08 2.18 2 2 0 0 1 2.06 0h3a2 2 0 0 1 2 1.72c.12.86.31 1.7.57 2.5a2 2 0 0 1-.45 2.11L6.09 7.41a16 16 0 0 0 6.5 6.5l1.08-1.09a2 2 0 0 1 2.11-.45c.8.26 1.64.45 2.5.57A2 2 0 0 1 22 16.92z" />
                        </svg>
                    </span>
                    <a href="tel:8001235346" class="hover:underline underline-offset-4">
                        8001235346
                    </a>
                </div>
            </div>
        </div>

    </div>
</div>