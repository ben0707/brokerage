    <script>
        (() => {
            const modal = document.getElementById("txModal");
            const backdrop = document.getElementById("txModalBackdrop");
            const closeBtn = document.getElementById("txModalClose");

            const els = {
                type: document.getElementById("mType"),
                invoice: document.getElementById("mInvoice"),
                amount: document.getElementById("mAmount"),
                status: document.getElementById("mStatus"),
                from: document.getElementById("mFrom"),
                to: document.getElementById("mTo"),
                toLabel: document.getElementById("mToLabel"),
                commission: document.getElementById("mCommission"),
                gross: document.getElementById("mGross"),
                createdAt: document.getElementById("mCreatedAt"),
                processedAt: document.getElementById("mProcessedAt"),
                receivedAt: document.getElementById("mReceivedAt"),
            };

            const open = (btn) => {
                // Fill modal from data-attributes
                els.type.textContent = btn.dataset.txType || "Deposit";
                els.invoice.textContent = btn.dataset.txInvoice || "—";
                els.amount.textContent = btn.dataset.txAmount || "—";
                els.status.textContent = btn.dataset.txStatus || "Done";
                els.from.textContent = btn.dataset.txFrom || "—";
                els.to.textContent = btn.dataset.txTo || "—";
                els.toLabel.textContent = btn.dataset.txToLabel || "ex";
                els.commission.textContent = btn.dataset.txCommission || "—";
                els.gross.textContent = btn.dataset.txGross || "—";

                // Simple timeline timestamps (you can bind real ones later)
                const created = btn.dataset.txTime || "—";
                els.createdAt.textContent = created;
                els.processedAt.textContent = created.replace("10:58", "10:59"); // demo
                els.receivedAt.textContent = created.replace("10:58", "10:59");  // demo

                // Show modal
                modal.classList.remove("hidden");
                requestAnimationFrame(() => {
                    backdrop.classList.remove("opacity-0");
                    backdrop.classList.add("opacity-100");
                });

                document.body.style.overflow = "hidden";
            };

            const close = () => {
                backdrop.classList.remove("opacity-100");
                backdrop.classList.add("opacity-0");

                setTimeout(() => {
                    modal.classList.add("hidden");
                    document.body.style.overflow = "";
                }, 150);
            };

            document.querySelectorAll("[data-open-tx]").forEach(btn => {
                btn.addEventListener("click", () => open(btn));
            });

            closeBtn?.addEventListener("click", close);
            backdrop?.addEventListener("click", close);

            document.addEventListener("keydown", (e) => {
                if (e.key === "Escape" && !modal.classList.contains("hidden")) close();
            });
        })();
    </script>
