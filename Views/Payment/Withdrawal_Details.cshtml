@{
    Layout = "~/Views/Shared/_Account.cshtml";
    ViewData["Title"] = "Withdrawal details";
}

@* ===================== WITHDRAWAL DETAILS (Bank details) ===================== *@

<div class="mx-auto w-full max-w-6xl px-2 sm:px-4 md:px-0">
    <!-- Header -->
    <div class="mb-8">
        <h1 class="text-4xl font-semibold tracking-tight text-slate-900 dark:text-white">Withdrawal</h1>

        <a href="javascript:history.back()"
            class="mt-2 inline-flex items-center gap-3 text-sm font-medium text-blue-600 hover:underline dark:text-blue-400">
            <svg viewBox="0 0 24 24" class="h-5 w-5" fill="none" stroke="currentColor" stroke-width="2"
                stroke-linecap="round" stroke-linejoin="round">
                <path d="M15 18l-6-6 6-6" />
            </svg>
            Back
        </a>
    </div>

    <div class="grid grid-cols-1 gap-10 lg:grid-cols-12">
        <!-- LEFT: form -->
        <div class="lg:col-span-8">
            <div class="max-w-3xl">
                <!-- Bank name -->
                <div class="mb-6">
                    <label class="mb-2 block text-sm font-medium text-slate-700 dark:text-slate-200">
                        Bank name
                    </label>

                    <div class="relative" id="bankRoot">
                        <button id="bankBtn" type="button"
                            class="flex h-12 w-full items-center justify-between rounded-md border border-slate-200 bg-white px-3
                                       hover:border-slate-300 focus:border-slate-400 focus:outline-none
                                       dark:border-slate-800 dark:bg-slate-950 dark:hover:border-slate-700 dark:focus:border-slate-600 transition-colors">
                            <span class="flex items-center gap-3">
                                <span
                                    class="inline-flex h-8 w-8 items-center justify-center rounded-full bg-black ring-1 ring-slate-200 dark:ring-slate-800">
                                    <img id="bankLogo" src="/assets/payments/bank-generic.png" alt="Bank"
                                        class="h-4 w-4 object-contain" />
                                </span>
                                <span id="bankLabel" class="text-sm font-medium text-slate-900 dark:text-slate-50">
                                    Select bank
                                </span>
                            </span>

                            <svg id="bankCaret" viewBox="0 0 20 20"
                                class="h-5 w-5 text-slate-400 transition-transform dark:text-slate-500" fill="none"
                                stroke="currentColor" stroke-width="1.8" stroke-linecap="round">
                                <path d="M6 8l4 4 4-4" />
                            </svg>
                        </button>

                        <div id="bankPanel"
                            class="absolute left-0 top-[calc(100%+8px)] z-40 hidden w-full overflow-hidden rounded-xl
                                    border border-slate-200 bg-white shadow-xl dark:border-slate-800 dark:bg-slate-950">
                            <div class="px-3 py-2 text-xs font-semibold text-slate-500 dark:text-slate-400">
                                Choose a bank
                            </div>

                            <button type="button"
                                class="bank-item flex w-full items-center gap-3 px-3 py-3 text-left hover:bg-slate-50 dark:hover:bg-slate-900/60"
                                data-label="GTBank" data-logo="/assets/payments/gtbank.png">
                                <span
                                    class="inline-flex h-9 w-9 items-center justify-center rounded-full bg-white ring-1 ring-slate-200 dark:bg-black dark:ring-slate-800">
                                    <img src="/assets/payments/gtbank.png" alt="GTBank"
                                        class="h-6 w-6 object-contain" />
                                </span>
                                <span class="text-sm font-medium text-slate-900 dark:text-slate-50">GTBank</span>
                            </button>

                            <button type="button"
                                class="bank-item flex w-full items-center gap-3 px-3 py-3 text-left hover:bg-slate-50 dark:hover:bg-slate-900/60"
                                data-label="Access Bank" data-logo="/assets/payments/access.png">
                                <span
                                    class="inline-flex h-9 w-9 items-center justify-center rounded-full bg-white ring-1 ring-slate-200 dark:bg-black dark:ring-slate-800">
                                    <img src="/assets/payments/access.png" alt="Access Bank"
                                        class="h-6 w-6 object-contain" />
                                </span>
                                <span class="text-sm font-medium text-slate-900 dark:text-slate-50">Access Bank</span>
                            </button>

                            <button type="button"
                                class="bank-item flex w-full items-center gap-3 px-3 py-3 text-left hover:bg-slate-50 dark:hover:bg-slate-900/60"
                                data-label="PALMPAY" data-logo="/assets/payments/palmpay.png">
                                <span
                                    class="inline-flex h-9 w-9 items-center justify-center rounded-full bg-white ring-1 ring-slate-200 dark:bg-black dark:ring-slate-800">
                                    <img src="/assets/payments/palmpay.png" alt="PALMPAY"
                                        class="h-6 w-6 object-contain" />
                                </span>
                                <span class="text-sm font-medium text-slate-900 dark:text-slate-50">PALMPAY</span>
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Account number -->
                <div class="mb-6">
                    <label class="mb-2 block text-sm font-medium text-slate-700 dark:text-slate-200">
                        Account number
                    </label>
                    <input id="acctNo" inputmode="numeric" maxlength="10" placeholder=""
                        class="h-12 w-full rounded-md border border-slate-200 bg-white px-3
                                  text-sm font-medium text-slate-900 placeholder:text-slate-300
                                  focus:border-slate-400 focus:outline-none
                                  dark:border-slate-800 dark:bg-slate-950 dark:text-slate-50 dark:placeholder:text-slate-600" />
                </div>

                <!-- Account name -->
                <div class="mb-2">
                    <label class="mb-2 block text-sm font-medium text-slate-700 dark:text-slate-200">
                        Account name
                    </label>
                    <input id="acctName" placeholder=""
                        class="h-12 w-full rounded-md border border-slate-200 bg-white px-3
                                  text-sm font-medium text-slate-900 placeholder:text-slate-300
                                  focus:border-slate-400 focus:outline-none
                                  dark:border-slate-800 dark:bg-slate-950 dark:text-slate-50 dark:placeholder:text-slate-600" />
                </div>

                <p class="mb-10 text-sm text-slate-500 dark:text-slate-400">
                    Account name must match the name on your bank account
                </p>

                <button id="continueBtn" disabled class="h-12 rounded-md border border-slate-300 bg-white px-10 text-sm font-semibold text-slate-400
                               cursor-not-allowed dark:border-slate-700 dark:bg-black dark:text-slate-600">
                    Continue
                </button>
            </div>
        </div>

        <!-- RIGHT: Terms + FAQ -->
        <aside class="lg:col-span-4">
            <div class="hidden lg:block">
                <div class="border-l border-slate-200 pl-10 dark:border-slate-800">
                    <h3 class="text-xl font-semibold text-slate-900 dark:text-white">Terms</h3>

                    <div class="mt-4 space-y-2 text-sm text-slate-600 dark:text-slate-300">
                        <div class="flex items-center justify-between gap-4">
                            <span class="text-slate-500 dark:text-slate-400">Average payment time</span>
                            <span class="font-medium text-slate-900 dark:text-slate-50" id="termsTime">1 hour</span>
                        </div>
                        <div class="flex items-center justify-between gap-4">
                            <span class="text-slate-500 dark:text-slate-400">Fee</span>
                            <span class="font-medium text-slate-900 dark:text-slate-50" id="termsFee">0%</span>
                        </div>
                    </div>

                    <h3 class="mt-10 text-xl font-semibold text-slate-900 dark:text-white">FAQ</h3>
                    <div class="mt-4 space-y-2 text-sm text-slate-600 dark:text-slate-300">
                        <a href="#" class="block hover:text-slate-900 dark:hover:text-white">How do I verify my
                            account?</a>
                        <a href="#" class="block hover:text-slate-900 dark:hover:text-white">How do I verify my online
                            banking account?</a>
                        <a href="#" class="block hover:text-slate-900 dark:hover:text-white">How do I withdraw with
                            online bank?</a>
                    </div>
                </div>
            </div>

            <!-- Mobile compact terms -->
            <div class="lg:hidden">
                <div class="rounded-xl border border-slate-200 bg-white p-4 dark:border-slate-800 dark:bg-slate-950">
                    <div class="flex items-center justify-between">
                        <h3 class="text-sm font-semibold text-slate-900 dark:text-slate-50">Terms</h3>
                        <span class="text-xs text-slate-500 dark:text-slate-400">Fee <span
                                class="font-semibold text-slate-900 dark:text-slate-50">0%</span></span>
                    </div>
                    <div class="mt-3 flex items-center justify-between text-sm text-slate-600 dark:text-slate-300">
                        <span class="text-slate-500 dark:text-slate-400">Average payment time</span>
                        <span class="font-medium text-slate-900 dark:text-slate-50">1 hour</span>
                    </div>
                </div>
            </div>
        </aside>
    </div>
</div>

<script>
    (function () {
        // ---------- bank dropdown ----------
        const bankRoot = document.getElementById("bankRoot");
        const bankBtn = document.getElementById("bankBtn");
        const bankPanel = document.getElementById("bankPanel");
        const bankCaret = document.getElementById("bankCaret");
        const bankLogo = document.getElementById("bankLogo");
        const bankLabel = document.getElementById("bankLabel");

        let bankSelected = false;

        function openBank() {
            bankPanel.classList.remove("hidden");
            bankCaret.classList.add("rotate-180");
        }
        function closeBank() {
            bankPanel.classList.add("hidden");
            bankCaret.classList.remove("rotate-180");
        }
        function toggleBank() {
            bankPanel.classList.contains("hidden") ? openBank() : closeBank();
        }

        bankBtn?.addEventListener("click", (e) => {
            e.stopPropagation();
            toggleBank();
        });

        document.addEventListener("click", (e) => {
            if (!bankRoot) return;
            if (!bankRoot.contains(e.target)) closeBank();
        });

        document.querySelectorAll(".bank-item").forEach((btn) => {
            btn.addEventListener("click", () => {
                const label = btn.getAttribute("data-label") || "Selected bank";
                const logo = btn.getAttribute("data-logo") || "/assets/payments/bank-generic.png";
                bankLabel.textContent = label;
                bankLogo.src = logo;
                bankSelected = true;
                closeBank();
                validate();
            });
        });

        // ---------- validation ----------
        const acctNo = document.getElementById("acctNo");
        const acctName = document.getElementById("acctName");
        const continueBtn = document.getElementById("continueBtn");

        function setDisabled() {
            continueBtn.disabled = true;
            continueBtn.className =
                "h-12 rounded-md border border-slate-300 bg-white px-10 text-sm font-semibold text-slate-400 cursor-not-allowed " +
                "dark:border-slate-700 dark:bg-black dark:text-slate-600";
        }

        function setEnabled() {
            continueBtn.disabled = false;
            continueBtn.className =
                "h-12 rounded-md bg-[#F9D900] px-10 text-sm font-semibold text-black hover:bg-yellow-300 transition";
        }

        function onlyDigits10(v) {
            return /^\d{10}$/.test(v);
        }

        function validate() {
            const noOk = onlyDigits10((acctNo.value || "").trim());
            const nameOk = ((acctName.value || "").trim().length >= 3);
            const ok = bankSelected && noOk && nameOk;

            ok ? setEnabled() : setDisabled();
        }

        acctNo?.addEventListener("input", () => {
            // Keep digits only
            acctNo.value = acctNo.value.replace(/\D+/g, "").slice(0, 10);
            validate();
        });
        acctName?.addEventListener("input", validate);

        continueBtn?.addEventListener("click", () => {
            if (continueBtn.disabled) return;
            // Wire to your MVC POST
            alert("Continue â†’ proceed to confirmation (wire to your action).");
        });

        setDisabled();
    })();
</script>