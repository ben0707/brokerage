@{
    Layout = "~/Views/Shared/_Account.cshtml";
    ViewData["Title"] = "Deposit";
}

<div class="mx-auto w-full max-w-5xl">
    <!-- Header -->
    <div class="mb-6">
        <h1 class="text-3xl font-semibold tracking-tight text-slate-900 dark:text-white">Deposit</h1>

        <a href="#" class="mt-2 inline-flex items-center gap-2 text-sm font-medium text-blue-600 hover:text-blue-700 hover:underline
                  dark:text-blue-400 dark:hover:text-blue-300">
            <svg viewBox="0 0 24 24" class="h-4 w-4" fill="none" stroke="currentColor" stroke-width="2"
                stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                <path d="M15 18l-6-6 6-6" />
            </svg>
            Back
        </a>
    </div>

    <div class="grid gap-8 lg:grid-cols-[1fr_280px]">
        <!-- LEFT -->
        <section class="space-y-5">
            <h2 class="text-sm font-semibold text-slate-900 dark:text-slate-50">Payment details</h2>

            <!-- Bank name (select-like) -->
            <div>
                <label class="mb-2 block text-xs font-medium text-slate-500 dark:text-slate-400">Bank name</label>

                <button type="button" class="group flex w-full items-center justify-between rounded-md border border-slate-200 bg-white px-3 py-3 text-sm
                               text-slate-900 shadow-sm transition
                               hover:border-slate-300 hover:bg-slate-50
                               focus:outline-none focus:ring-2 focus:ring-slate-900/10
                               dark:border-slate-800 dark:bg-black dark:text-slate-50
                               dark:hover:border-slate-700 dark:hover:bg-white/5 dark:focus:ring-white/10">
                    <span class="flex min-w-0 items-center gap-3">
                        <!-- Payment logo -->
                        <span
                            class="flex h-9 w-9 items-center justify-center rounded-full bg-black ring-1 ring-slate-200 dark:ring-slate-800">
                            <img src="~/assets/payments/palmpay.svg" alt="PALMPAY" class="h-5 w-5 object-contain" />
                        </span>

                        <span class="truncate font-medium text-slate-900 dark:text-slate-50">PALMPAY</span>
                    </span>

                    <span
                        class="text-slate-400 transition group-hover:text-slate-600 dark:text-slate-600 dark:group-hover:text-slate-400">
                        <svg viewBox="0 0 24 24" class="h-5 w-5" fill="none" stroke="currentColor" stroke-width="2"
                            stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                            <path d="M6 9l6 6 6-6" />
                        </svg>
                    </span>
                </button>
            </div>

            <!-- Account number (copy + toast) -->
            <div>
                <label class="mb-2 block text-xs font-medium text-slate-500 dark:text-slate-400">Account number</label>

                <div class="flex items-center justify-between gap-3 rounded-md border border-slate-200 bg-white px-3 py-3 text-sm
                            text-slate-900 shadow-sm
                            dark:border-slate-800 dark:bg-black dark:text-slate-50">
                    <span id="accountNumber" class="font-medium tabular-nums tracking-wide">9010297878</span>

                    <button type="button" id="copyAccountBtn" class="inline-flex items-center gap-2 rounded-md px-2 py-1 text-xs font-semibold
                                   text-slate-600 hover:bg-slate-50 hover:text-slate-900
                                   dark:text-slate-300 dark:hover:bg-white/5 dark:hover:text-white"
                        aria-label="Copy account number">
                        <svg viewBox="0 0 24 24" class="h-4 w-4" fill="none" stroke="currentColor" stroke-width="2"
                            stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                            <rect x="9" y="9" width="13" height="13" rx="2" />
                            <rect x="2" y="2" width="13" height="13" rx="2" />
                        </svg>
                        Copy
                    </button>
                </div>
            </div>

            <!-- Warning box -->
            <div class="rounded-md border border-amber-200 bg-amber-50 px-5 py-4 text-sm
                        dark:border-amber-500/20 dark:bg-amber-500/10">
                <p class="font-semibold text-slate-900 dark:text-white">
                    Third-party payments are not allowed
                </p>

                <ul class="mt-3 list-disc space-y-1 pl-6 text-slate-700 dark:text-slate-200">
                    <li>Only use personal payment accounts that belong to you</li>
                    <li>Corporate payment accounts will not be accepted</li>
                    <li>Complete the payment with the same details provided on this form</li>
                </ul>
            </div>

            <!-- Continue -->
            <div class="pt-2">
                <button type="submit" class="inline-flex items-center justify-center rounded-md bg-brandYellow px-6 py-2.5 text-sm font-semibold
                               text-black hover:bg-yellow-300 active:bg-yellow-400">
                    Continue
                </button>
            </div>
        </section>

        <!-- RIGHT: Terms -->
        <aside class="h-fit">
            <div class="rounded-md border border-slate-200 bg-white p-5 shadow-sm dark:border-slate-800 dark:bg-black">
                <h3 class="text-sm font-semibold text-slate-900 dark:text-slate-50">Terms</h3>

                <dl class="mt-4 space-y-3 text-sm">
                    <div class="flex items-center justify-between gap-4">
                        <dt class="text-slate-500 dark:text-slate-400">Average payment time</dt>
                        <dd class="font-semibold text-slate-900 dark:text-slate-50">Instant</dd>
                    </div>
                    <div class="flex items-center justify-between gap-4">
                        <dt class="text-slate-500 dark:text-slate-400">Fee</dt>
                        <dd class="font-semibold text-slate-900 dark:text-slate-50">0%</dd>
                    </div>
                </dl>
            </div>
        </aside>
    </div>
</div>

<!-- COPY TOAST (fixed) -->
<div id="copyToast" class="pointer-events-none fixed bottom-24 left-1/2 z-[100]
            hidden -translate-x-1/2 items-center gap-2 rounded-md
            bg-slate-900 px-4 py-2 text-sm font-medium text-white shadow-lg
            dark:bg-white dark:text-black">
    <svg viewBox="0 0 24 24" class="h-4 w-4" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"
        stroke-linejoin="round" aria-hidden="true">
        <path d="M20 6 9 17l-5-5" />
    </svg>
    <span>Account number copied</span>
</div>

<script>
    (() => {
        const btn = document.getElementById("copyAccountBtn");
        const valueEl = document.getElementById("accountNumber");
        const toast = document.getElementById("copyToast");

        if (!btn || !valueEl || !toast) return;

        const showToast = () => {
            toast.classList.remove("hidden");
            toast.classList.add("flex");

            clearTimeout(window.__copyToastTimer);
            window.__copyToastTimer = setTimeout(() => {
                toast.classList.add("hidden");
                toast.classList.remove("flex");
            }, 1800);
        };

        btn.addEventListener("click", async () => {
            const value = (valueEl.textContent || "").trim();
            if (!value) return;

            try {
                // Prefer Clipboard API
                if (navigator.clipboard?.writeText) {
                    await navigator.clipboard.writeText(value);
                    showToast();
                    return;
                }

                // Fallback (older browsers)
                const ta = document.createElement("textarea");
                ta.value = value;
                ta.setAttribute("readonly", "");
                ta.style.position = "fixed";
                ta.style.top = "-9999px";
                document.body.appendChild(ta);
                ta.select();
                document.execCommand("copy");
                document.body.removeChild(ta);

                showToast();
            } catch (e) {
                console.error("Copy failed", e);
            }
        });
    })();
</script>