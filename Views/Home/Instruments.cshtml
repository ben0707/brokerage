@{
    ViewData["Title"] = "Home Page";
    ViewBag.Title = "Home";
}

<!-- ============ FULL-WIDTH DARK TICKER BAR ============ -->
<section id="contest-ticker" class="w-full bg-[#0d0d0d] dark:bg-black">
    <div class="tradingview-widget-container w-full">
        <div class="tradingview-widget-container__widget"></div>

        <script type="text/javascript" src="https://s3.tradingview.com/external-embedding/embed-widget-ticker-tape.js"
            async>
                {
                    "symbols": [
                        { "proName": "FOREXCOM:SPXUSD", "title": "S&P 500 Index" },
                        { "proName": "FOREXCOM:NSXUSD", "title": "US 100 Cash CFD" },
                        { "proName": "FX_IDC:EURUSD", "title": "EUR/USD" },
                        { "proName": "BITSTAMP:BTCUSD", "title": "Bitcoin" },
                        { "proName": "BITSTAMP:ETHUSD", "title": "Ethereum" },
                        { "proName": "OANDA:XAUUSD", "title": "Gold" },
                        { "proName": "NASDAQ:NVDA", "title": "NVIDIA" },
                        { "proName": "BINANCE:XRPUSDT", "title": "XRP" },
                        { "proName": "OANDA:USDJPY", "title": "USD/JPY" }
                    ],
                        "colorTheme": "dark",
                            "locale": "en",
                                "displayMode": "regular",
                                    "isTransparent": false,
                                        "showSymbolLogo": true,
                                            "largeChartUrl": ""
                }
            </script>
    </div>
</section>

<!-- ============ CHOOSE YOUR MARKET ============ -->
<section id="markets" class="relative py-16 md:py-20 overflow-hidden">

    <!-- Base background + grid pattern -->
    <div class="absolute inset-0 -z-20 bg-white dark:bg-black"></div>

    <!-- Light mode pattern -->
    <div class="pointer-events-none absolute inset-0 -z-10 opacity-80 dark:hidden" style="
            background-image:
                linear-gradient(to right, rgba(148,163,184,0.16) 1px, transparent 1px),
                linear-gradient(to bottom, rgba(148,163,184,0.16) 1px, transparent 1px);
            background-size: 80px 80px;
         ">
    </div>

    <!-- Dark mode pattern (fixed: visible but subtle) -->
    <div class="pointer-events-none absolute inset-0 -z-10 hidden dark:block " style="
        background-image:
            linear-gradient(to right, rgba(255,255,255,0.07) 1px, transparent 1px),
            linear-gradient(to bottom, rgba(255,255,255,0.07) 1px, transparent 1px);
        background-size: 70px 70px;
     ">
    </div>


    <div class="relative mx-auto max-w-6xl px-4">

        <!-- Heading -->
        <div class="text-center mb-12 md:mb-14">
            <h2 class="text-3xl md:text-5xl font-extrabold tracking-tight text-slate-900 dark:text-white">
                Choose your <span class="text-brandGold">Market</span>
            </h2>
            <p class="mt-4 max-w-xl mx-auto text-sm md:text-base text-slate-600 dark:text-slate-300">
                Trade the world's most liquid markets with institutional-grade execution
                and competitive pricing.
            </p>
        </div>

        <!-- Cards Grid -->
        <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-4">

            <!-- Forex -->
            <article class="rounded-2xl bg-white border border-slate-200 dark:border-slate-800 dark:bg-[#050505]
                       p-6 md:p-7 shadow-sm hover:shadow-md transition group">
                <div class="flex items-start justify-between">
                    <div class="flex items-center gap-3">
                        <div class="h-11 w-11 rounded-full bg-blue-100 dark:bg-blue-900/40
                                    flex items-center justify-center">
                            <svg viewBox="0 0 24 24" class="h-6 w-6 text-blue-600 dark:text-blue-300" fill="none"
                                stroke="currentColor" stroke-width="1.7">
                                <path d="M12 3v18M5 9h14M5 15h14" />
                            </svg>
                        </div>
                        <div>
                            <h3 class="text-sm font-semibold text-slate-900 dark:text-white">Forex</h3>
                            <p class="text-[11px] text-slate-500 dark:text-slate-400">50+ Pairs</p>
                        </div>
                    </div>
                    <span class="text-slate-400 group-hover:text-brandGold transition text-sm">
                        ↗
                    </span>
                </div>

                <p class="mt-4 text-xs md:text-sm text-slate-600 dark:text-slate-300">
                    Trade major, minor, and exotic currency pairs.
                </p>

                <div class="mt-5 space-y-3">
                    <div class="flex items-center justify-between rounded-xl
                                border border-slate-200 dark:border-slate-700 px-3 py-2.5">
                        <span class="text-xs text-slate-600 dark:text-slate-400">Max Leverage</span>
                        <span class="text-sm font-semibold text-slate-900 dark:text-white">1:3000</span>
                    </div>
                    <div class="flex items-center justify-between rounded-xl
                                border border-slate-200 dark:border-slate-700 px-3 py-2.5">
                        <span class="text-xs text-slate-600 dark:text-slate-400">Min Spread</span>
                        <span class="text-sm font-semibold text-slate-900 dark:text-white">0.1 pips</span>
                    </div>
                </div>

                <button class="mt-6 inline-flex items-center gap-1 text-xs md:text-sm font-medium text-brandGold">
                    Forex ↗
                </button>
            </article>

            <!-- Commodities -->
            <article class="rounded-2xl bg-white border border-slate-200 dark:border-slate-800 dark:bg-[#050505]
                       p-6 md:p-7 shadow-sm hover:shadow-md transition group">
                <div class="flex items-start justify-between">
                    <div class="flex items-center gap-3">
                        <div class="h-11 w-11 rounded-full bg-yellow-100 dark:bg-yellow-900/40
                                    flex items-center justify-center">
                            <svg viewBox="0 0 24 24" class="h-6 w-6 text-yellow-600 dark:text-yellow-300" fill="none"
                                stroke="currentColor" stroke-width="1.7">
                                <path d="M12 2 2 7l10 5 10-5-10-5Z" />
                                <path d="M2 17l10 5 10-5" />
                                <path d="M2 12l10 5 10-5" />
                            </svg>
                        </div>
                        <div>
                            <h3 class="text-sm font-semibold text-slate-900 dark:text-white">Commodities</h3>
                            <p class="text-[11px] text-slate-500 dark:text-slate-400">7 Instruments</p>
                        </div>
                    </div>
                    <span class="text-slate-400 group-hover:text-brandGold transition text-sm">↗</span>
                </div>

                <p class="mt-4 text-xs md:text-sm text-slate-600 dark:text-slate-300">
                    Trade gold, silver, oil, and other global commodities.
                </p>

                <div class="mt-5 space-y-3">
                    <div class="flex items-center justify-between rounded-xl
                                border border-slate-200 dark:border-slate-700 px-3 py-2.5">
                        <span class="text-xs text-slate-600 dark:text-slate-400">Max Leverage</span>
                        <span class="text-sm font-semibold text-slate-900 dark:text-white">1:3000</span>
                    </div>
                    <div class="flex items-center justify-between rounded-xl
                                border border-slate-200 dark:border-slate-700 px-3 py-2.5">
                        <span class="text-xs text-slate-600 dark:text-slate-400">Min Spread</span>
                        <span class="text-sm font-semibold text-slate-900 dark:text-white">0.3 pips</span>
                    </div>
                </div>

                <button class="mt-6 inline-flex items-center gap-1 text-xs md:text-sm font-medium text-brandGold">
                    Commodities ↗
                </button>
            </article>

            <!-- Indices -->
            <article class="rounded-2xl bg-white border border-slate-200 dark:border-slate-800 dark:bg-[#050505]
                       p-6 md:p-7 shadow-sm hover:shadow-md transition group">
                <div class="flex items-start justify-between">
                    <div class="flex items-center gap-3">
                        <div class="h-11 w-11 rounded-full bg-green-100 dark:bg-green-900/40
                                    flex items-center justify-center">
                            <svg viewBox="0 0 24 24" class="h-6 w-6 text-green-600 dark:text-green-300" fill="none"
                                stroke="currentColor" stroke-width="1.7">
                                <path d="M3 17h18M8 13l3-3 2 2 4-5" />
                            </svg>
                        </div>
                        <div>
                            <h3 class="text-sm font-semibold text-slate-900 dark:text-white">Indices</h3>
                            <p class="text-[11px] text-slate-500 dark:text-slate-400">5 Indices</p>
                        </div>
                    </div>
                    <span class="text-slate-400 group-hover:text-brandGold transition text-sm">↗</span>
                </div>

                <p class="mt-4 text-xs md:text-sm text-slate-600 dark:text-slate-300">
                    Trade global stock market indices.
                </p>

                <div class="mt-5 space-y-3">
                    <div class="flex items-center justify-between rounded-xl
                                border border-slate-200 dark:border-slate-700 px-3 py-2.5">
                        <span class="text-xs text-slate-600 dark:text-slate-400">Max Leverage</span>
                        <span class="text-sm font-semibold text-slate-900 dark:text-white">1:3000</span>
                    </div>
                    <div class="flex items-center justify-between rounded-xl
                                border border-slate-200 dark:border-slate-700 px-3 py-2.5">
                        <span class="text-xs text-slate-600 dark:text-slate-400">Min Spread</span>
                        <span class="text-sm font-semibold text-slate-900 dark:text-white">0.4 pips</span>
                    </div>
                </div>

                <button class="mt-6 inline-flex items-center gap-1 text-xs md:text-sm font-medium text-brandGold">
                    Indices ↗
                </button>
            </article>

            <!-- Crypto -->
            <article class="rounded-2xl bg-white border border-slate-200 dark:border-slate-800 dark:bg-[#050505]
                       p-6 md:p-7 shadow-sm hover:shadow-md transition group">
                <div class="flex items-start justify-between">
                    <div class="flex items-center gap-3">
                        <div class="h-11 w-11 rounded-full bg-orange-100 dark:bg-orange-900/40
                                    flex items-center justify-center">
                            <svg viewBox="0 0 24 24" class="h-6 w-6 text-orange-600 dark:text-orange-300" fill="none"
                                stroke="currentColor" stroke-width="1.7">
                                <path
                                    d="M12 2a10 10 0 1 0 10 10A10.08 10.08 0 0 0 12 2Zm1 15a3 3 0 1 1 0-6 3 3 0 0 1 0 6Z" />
                            </svg>
                        </div>
                        <div>
                            <h3 class="text-sm font-semibold text-slate-900 dark:text-white">Crypto</h3>
                            <p class="text-[11px] text-slate-500 dark:text-slate-400">15 Cryptos</p>
                        </div>
                    </div>
                    <span class="text-slate-400 group-hover:text-brandGold transition text-sm">↗</span>
                </div>

                <p class="mt-4 text-xs md:text-sm text-slate-600 dark:text-slate-300">
                    Trade Bitcoin, Ethereum, and other leading cryptocurrencies.
                </p>

                <div class="mt-5 space-y-3">
                    <div class="flex items-center justify-between rounded-xl
                                border border-slate-200 dark:border-slate-700 px-3 py-2.5">
                        <span class="text-xs text-slate-600 dark:text-slate-400">Max Leverage</span>
                        <span class="text-sm font-semibold text-slate-900 dark:text-white">1:3000</span>
                    </div>
                    <div class="flex items-center justify-between rounded-xl
                                border border-slate-200 dark:border-slate-700 px-3 py-2.5">
                        <span class="text-xs text-slate-600 dark:text-slate-400">Min Spread</span>
                        <span class="text-sm font-semibold text-slate-900 dark:text-white">0.5 pips</span>
                    </div>
                </div>

                <button class="mt-6 inline-flex items-center gap-1 text-xs md:text-sm font-medium text-brandGold">
                    Crypto ↗
                </button>
            </article>
        </div>

        <!-- CTA -->
        <div class="mt-12 text-center">
            <a href="#" class="inline-flex items-center justify-center rounded-2xl bg-brandGold px-8 py-3
                      text-sm font-semibold text-black shadow hover:bg-yellow-300 transition">
                Start trading ↗
            </a>
        </div>

    </div>
</section>