    <script>
        const tabDeposit = document.getElementById("tabDeposit");
        const tabWithdraw = document.getElementById("tabWithdraw");
        const depositCards = document.getElementById("depositCards");
        const withdrawCards = document.getElementById("withdrawCards");

        function setActiveTab(isDeposit) {
            if (isDeposit) {
                // Deposit active
                tabDeposit.classList.add("bg-black", "text-white", "dark:bg-white", "dark:text-black");
                tabWithdraw.classList.remove("bg-black", "text-white", "dark:bg-white", "dark:text-black");

                depositCards.classList.remove("hidden");
                withdrawCards.classList.add("hidden");
            } else {
                // Withdrawal active
                tabWithdraw.classList.add("bg-black", "text-white", "dark:bg-white", "dark:text-black");
                tabDeposit.classList.remove("bg-black", "text-white", "dark:bg-white", "dark:text-black");

                withdrawCards.classList.remove("hidden");
                depositCards.classList.add("hidden");
            }
        }

        tabDeposit.addEventListener("click", () => setActiveTab(true));
        tabWithdraw.addEventListener("click", () => setActiveTab(false));
    </script>

    <script>
        // Simple IntersectionObserver to fade cards in on scroll
        (function () {
            const cards = document.querySelectorAll('.funding-fade-card');
            if (!('IntersectionObserver' in window) || cards.length === 0) {
                cards.forEach(c => c.classList.add('is-visible'));
                return;
            }

            const observer = new IntersectionObserver(
                (entries) => {
                    entries.forEach(entry => {
                        if (entry.isIntersecting) {
                            entry.target.classList.add('is-visible');
                            observer.unobserve(entry.target);
                        }
                    });
                },
                {
                    root: null,
                    threshold: 0.2
                }
            );

            cards.forEach(card => observer.observe(card));
        })();
    </script>
