@{
    ViewData["Title"] = "Forgot Password";
    Layout = "~/Views/Shared/_Auth.cshtml";
}

<section class="w-full max-w-md mx-auto px-4 py-10">
    <!-- Heading -->
    <div class="text-center">
        <h1 class="text-2xl font-semibold tracking-tight text-slate-900 dark:text-slate-50">
            Forgot your password?
        </h1>
        <p class="mt-2 text-sm text-slate-600 dark:text-slate-300">
            Enter your email address and weâ€™ll send you a secure link to reset your password.
        </p>
    </div>

    <!-- Form -->
    <form asp-controller="Account" asp-action="ForgotPassword" method="post" class="mt-8 space-y-6" id="forgot-form">
        @Html.AntiForgeryToken()

        <!-- Email -->
        <div class="space-y-1">
            <label for="email-input" class="block text-xs font-medium text-slate-700 dark:text-slate-200">
                Email address
            </label>
            <input id="email-input" name="Email" type="email" autocomplete="email" class="w-full rounded-xl border border-slate-300 bg-white px-3 py-2 text-sm
                          text-slate-900 placeholder:text-slate-400
                          focus:border-sky-500 focus:outline-none focus:ring-1 focus:ring-sky-500
                          dark:border-slate-700 dark:bg-slate-900 dark:text-slate-50
                          dark:placeholder:text-slate-500" />

            <p id="email-hint" class="mt-1 text-[11px] text-slate-400 dark:text-slate-400 hidden">
                Please enter a valid email address.
            </p>
        </div>

        <!-- Submit -->
        <button type="submit" id="submit-btn" class="flex w-full items-center justify-center gap-2 rounded-lg
                       bg-brandGold px-4 py-2.5 text-sm font-semibold text-black
                       shadow-soft-card hover:bg-yellow-400
                       focus-visible:outline-none focus-visible:ring-2
                       focus-visible:ring-brandGold/70">
            Send reset link
        </button>

        <!-- Secondary link -->
        <div class="text-center">
            <a asp-controller="Account" asp-action="Login" class="text-xs font-medium text-slate-600 hover:text-slate-900
                      dark:text-slate-300 dark:hover:text-slate-100">
                Back to sign in
            </a>
        </div>
    </form>

    <!-- Small help text -->
    <p class="mt-6 text-center text-[11px] text-slate-500 dark:text-slate-400">
        If you no longer have access to this email, please contact support.
    </p>
</section>

@section Scripts {
    <script src="~/js/forgotpassword.js"></script>
}