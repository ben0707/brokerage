@{
    ViewData["Title"] = "Password Reset Successful";
    Layout = "~/Views/Shared/_Auth.cshtml";
}

<section class="w-full max-w-md mx-auto px-4 py-10">
    <div class="flex flex-col items-center text-center">

        <!-- Success Icon -->
        <div class="flex h-12 w-12 items-center justify-center rounded-full 
                    bg-emerald-500/10 text-emerald-400 border border-emerald-500/40">
            <svg viewBox="0 0 24 24" class="h-6 w-6" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="12" r="10" />
                <path d="M8 12.5 10.5 15 16 9.5" stroke-linecap="round" stroke-linejoin="round" />
            </svg>
        </div>

        <!-- Heading -->
        <h1 class="mt-5 text-2xl font-semibold tracking-tight text-slate-900 dark:text-slate-50">
            Password reset successful
        </h1>

        <!-- Copy -->
        <p class="mt-2 text-sm text-slate-600 dark:text-slate-300 max-w-sm">
            Your password has been updated. You can now sign in with your new credentials
            and continue trading securely.
        </p>

        <!-- Optional extra info -->
        <p class="mt-3 text-xs text-slate-500 dark:text-slate-400">
            If you did not perform this action, contact our support team immediately.
        </p>

        <!-- CTA -->
        <div class="mt-8 w-full">
            <a asp-controller="Account" asp-action="Login" class="inline-flex w-full items-center justify-center rounded-lg 
                      bg-brandGold px-4 py-2.5 text-sm font-semibold text-black 
                      shadow-soft-card hover:bg-yellow-400
                      focus-visible:outline-none focus-visible:ring-2
                      focus-visible:ring-brandGold/70">
                Go to sign in
            </a>
        </div>

        <!-- Secondary link -->
        <div class="mt-4">
            <a asp-controller="Home" asp-action="Index" class="text-xs font-medium text-slate-600 hover:text-slate-900
                      dark:text-slate-300 dark:hover:text-slate-100">
                Back to homepage
            </a>
        </div>
    </div>
</section>