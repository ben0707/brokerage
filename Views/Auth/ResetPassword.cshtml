@{
    ViewData["Title"] = "Reset Password";
    Layout = "~/Views/Shared/_Auth.cshtml";
}

<section class="w-full max-w-md mx-auto px-4 py-10">
    <!-- Heading -->
    <div class="text-center">
        <h1 class="text-2xl font-semibold tracking-tight text-slate-900 dark:text-slate-50">
            Reset your password
        </h1>
        <p class="mt-2 text-sm text-slate-600 dark:text-slate-300">
            Choose a strong new password to secure your account.
        </p>
        @* Optional: show email if you pass it from controller *@
        @if (ViewBag.Email != null)
        {
            <p class="mt-1 text-xs text-slate-500 dark:text-slate-400">
                For account: <span class="font-medium">@ViewBag.Email</span>
            </p>
        }
    </div>

    <!-- Form -->
    <form asp-controller="Account" asp-action="ResetPassword" method="post" class="mt-8 space-y-6" id="reset-form">
        @Html.AntiForgeryToken()

        @* Hidden fields for Identity token + email *@
        <input type="hidden" name="Email" value="@ViewBag.Email" />
        <input type="hidden" name="Token" value="@ViewBag.Token" />

        <!-- New Password -->
        <div class="space-y-1">
            <label for="password-input" class="block text-xs font-medium text-slate-700 dark:text-slate-200">
                New password
            </label>
            <div class="relative">
                <input id="password-input" name="Password" type="password" autocomplete="new-password" class="w-full rounded-xl border border-slate-300 bg-white px-3 py-2 pr-10
                              text-sm text-slate-900 placeholder:text-slate-400
                              focus:border-sky-500 focus:outline-none focus:ring-1 focus:ring-sky-500
                              dark:border-slate-700 dark:bg-slate-900 dark:text-slate-50
                              dark:placeholder:text-slate-500" />
                <button type="button" id="password-toggle" class="absolute inset-y-0 right-0 flex items-center pr-3
                               text-[11px] font-medium text-slate-500 hover:text-slate-700
                               dark:text-slate-400 dark:hover:text-slate-200">
                    Show
                </button>
            </div>

            <!-- Strength bar -->
            <div id="password-strength-wrapper"
                class="mt-2 hidden h-1.5 w-full rounded-full bg-slate-800/40 dark:bg-slate-800">
                <div id="password-strength-bar" class="h-full w-0 rounded-full bg-red-500 transition-all duration-200">
                </div>
            </div>

            <!-- Rules -->
            <ul id="password-rules" class="mt-2 hidden space-y-1"></ul>
        </div>

        <!-- Confirm Password -->
        <div class="space-y-1">
            <label for="confirm-password-input" class="block text-xs font-medium text-slate-700 dark:text-slate-200">
                Confirm new password
            </label>
            <div class="relative">
                <input id="confirm-password-input" name="ConfirmPassword" type="password" autocomplete="new-password"
                    class="w-full rounded-xl border border-slate-300 bg-white px-3 py-2 pr-10
                              text-sm text-slate-900 placeholder:text-slate-400
                              focus:border-sky-500 focus:outline-none focus:ring-1 focus:ring-sky-500
                              dark:border-slate-700 dark:bg-slate-900 dark:text-slate-50
                              dark:placeholder:text-slate-500" />
                <button type="button" id="confirm-password-toggle" class="absolute inset-y-0 right-0 flex items-center pr-3
                               text-[11px] font-medium text-slate-500 hover:text-slate-700
                               dark:text-slate-400 dark:hover:text-slate-200">
                    Show
                </button>
            </div>
            <p id="confirm-hint" class="mt-1 text-[11px] text-slate-400 dark:text-slate-400">
                Repeat the same password to confirm.
            </p>
        </div>

        <!-- Submit -->
        <button type="submit" id="submit-btn" class="flex w-full items-center justify-center gap-2 rounded-lg
                       bg-brandGold px-4 py-2.5 text-sm font-semibold text-black
                       shadow-soft-card hover:bg-yellow-400
                       focus-visible:outline-none focus-visible:ring-2
                       focus-visible:ring-brandGold/70">
            Reset password
        </button>

        <!-- Secondary link -->
        <div class="text-center">
            <a asp-controller="Account" asp-action="Login" class="text-xs font-medium text-slate-600 hover:text-slate-900
                      dark:text-slate-300 dark:hover:text-slate-100">
                Back to sign in
            </a>
        </div>
    </form>
</section>

@section Scripts {
    <script src="~/js/resetpassword.js"></script>
}